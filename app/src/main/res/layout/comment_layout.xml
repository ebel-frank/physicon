<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <com.github.ivbaranov.mli.MaterialLetterIcon
        android:id="@+id/other_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        app:mli_letter_color="@android:color/white"
        app:mli_shape_type="circle"
        app:mli_initials="false"
        app:mli_letter_size="18"
        app:mli_letters_number="2"
        app:mli_initials_number="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/oval_shape_white"
        android:layout_toEndOf="@id/other_profile_image">

        <TextView
            android:id="@+id/other_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ebel_frank"
            android:textStyle="italic"
            android:layout_gravity="start" />

        <ImageView
            android:id="@+id/commentImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="gone"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Physics is the basis of engineering. As engineers you apply a lot of physics laws when building machines."
            android:textSize="15sp"
            android:textIsSelectable="true"
            android:layout_gravity="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
        <TextView
            android:id="@+id/other_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="20 minutes ago"
            android:textStyle="italic"
            android:layout_gravity="end" />
    </LinearLayout>

</RelativeLayout>